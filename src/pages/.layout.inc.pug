include .config.inc.pug

mixin glossary()
  #glossary
    p 
      | There are currently
      |
      span#nbProjects ?
      |
      | projects presented here with the following tags (click to filter):
      | 
      span#tags empty
    p#tagsMatchingInfo
      | Viewing the
      |
      span#nbOfProjectsMatching
      |
      | project(s) with the tag(s):
      | 
      span#selectedTags

mixin svgDecoration
  svg#redLine
    line(x1='0', y1='0', x2='0', y2='100%')
  svg#redCircle
    circle(cx='40', cy='40', r='40')
    text(x="50%", y="58%") Now

mixin project(date, title, link, pic, tags)
  - var id = title.replace(/\W+/g, "").toLowerCase()
  article.project(id=id)
    .info
      span.date
        i.fa.fa-calendar
        | &#160;#{date}
      a(href=link)
        h2= title
      block
      if tags
        each tag in tags
          span.tag=tag
      a(href=link)
        h3
          i.fa.fa-link
          | &#160;More details

    .visual
      a(href=link)
        if ! pic
          - pic = profilePicUrl
        img(src=pic)


html
  block vars
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='initial-scale=1.0')
    meta(name="description", content=metaDescription)
    block meta
    title= name + " | " + title
    link(rel="stylesheet", href="./css/all.min.css")
    link(rel="icon", href="favicon.ico")
  body
    header
      #me
        img(src=profilePicUrlMini)
        h1= name
      #about
        p= about
      #links
        a(href=linkedinProfile, title="LinkedIn")
          i.fa.fa-linkedin
        a(href=githubProfile, title="Github")
          i.fa.fa-github
        a(href=resumeLink, title="My resume")
          i.fa.fa-file-text
      ul#nav
        a(href="/", title="Projects")
          li
            i.fa.fa-home
            |
            | Personal projects
        a(href="/professional-projects.html", title="Professional Projects")
          li
            i.fa.fa-briefcase
            |
            | Professional projects
        a(href="/about.html", title="About")
          li
            i.fa.fa-info
            |
            | About
        a(href="/blog.html", title="Blog")
          li
            i.fa.fa-list
            |
            | Blog
    block content
    footer
      a(href=sourceWebsite)
        i.fa.fa-code-fork
        |
        | This website is homemade & open-source
    .scripts
      script(src="js/all.min.js")
